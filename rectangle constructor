#include <iostream>
using namespace std;
class rectangle{
  private:
  int length;
  int breadth;
  int area;
  
  
  public:
  rectangle(int len,int bre){
    length=len;
    breadth=bre;

    area=length*breadth;
  }
  void display(){
    cout<<"\trectangle details\t"<<endl;
    cout<<" Length  :"<<length<<endl;
    cout<<" Breadth :"<<breadth<<endl;
    cout<<" Area    :"<<area<<endl;
  }
};
int main (){
  rectangle r1(8,9);
  rectangle r2(6,8);
  r1.display();
  r2.display();
}
